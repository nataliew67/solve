<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/textView"
            android:layout_width="415dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Итого решено примеров"
            android:textSize="28dp"
            android:textColor="#FFAA00"
            android:textStyle="bold"
            app:autoSizeMinTextSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Итого решено примеров" />

        <TextView
            android:id="@+id/all_count"
            android:layout_width="415dp"
            android:layout_height="47dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="0"
            android:textSize="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:text="0" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="414dp"
            android:layout_height="75dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/all_count">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Правильно"
                android:textSize="20dp"
                tools:text="Правильно" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Неправильно"
                android:textSize="20dp"
                tools:text="Неправильно" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="20dp"
                tools:text="0" />

            <TextView
                android:id="@+id/wrong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="20dp"
                tools:text="0" />
        </LinearLayout>

        <TextView
            android:id="@+id/procent"
            android:layout_width="412dp"
            android:layout_height="71dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="0.00%"
            android:textColor="#FFAA00"
            android:textStyle="bold"
            android:textSize="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:text="0.00%" />

        <LinearLayout
            android:id="@+id/color"
            android:layout_width="408dp"
            android:layout_height="83dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/procent">

            <TextView
                android:id="@+id/one_number"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="00"
                android:textSize="28dp"
                tools:text="00" />

            <TextView
                android:id="@+id/oper"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textSize="28dp"
                tools:text="+" />

            <TextView
                android:id="@+id/two_number"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="00"
                android:textSize="28dp"
                tools:text="00" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="="
                android:textSize="28dp"
                tools:text="=" />

            <EditText
                android:id="@+id/result"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="00"
                android:inputType="number|numberSigned"

                android:textSize="28dp" />
        </LinearLayout>

        <Button
            android:id="@+id/check"
            android:layout_width="250dp"
            android:gravity="center_horizontal"
            android:layout_height="54dp"
            android:layout_marginTop="30dp"
            android:enabled="false"
            android:layout_marginStart="70dp"
            android:text="Проверить"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/color"
            android:onClick="onCheckButtonClick"/>

        <Button
            android:id="@+id/start"
            android:layout_width="415dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"

            android:backgroundTint="#FFAA00"
            android:onClick="onStartButtonClick"
            android:text="Старт"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
